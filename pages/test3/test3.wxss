/* pages/test2/test2.wxss */

.main-page {
  background-color: #f2f2f2;
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  overflow: scroll;
}

.ques-title {
  padding: 20rpx 0;
  font-size: 40rpx;
  color: #000;
  text-align: left;
}

.ques1 {
  padding: 0 44rpx;
  text-align: center;
  background: #fff;
  padding-bottom: 20rpx;
}

.ques1 .ques-title {
  background: #fff;
}

.ans1 {
  text-align: center;
  padding: 15rpx 0;
}

.ans1 .item {
  font-family: STYuanti-TC-Bold;
  font-size: 40rpx;
  color: #ff9f00;
  background: #fff;
  box-shadow: 0 4rpx 28rpx 0 rgba(0, 0, 0, 0.09);
  border-radius: 26rpx;
  width: 40%;
  margin: 15rpx 2%;
  display: inline-block;
  height: 150rpx;
  line-height: 150rpx;
}

.ans1 .item.active {
  background-image: linear-gradient(-120deg, #fc775d 0%, #ff9f00 100%);
  color: #fff;
}

.ques3 {
  text-align: center;
}

.ques3 .item {
  position: relative;
  display: inline-block;
  margin: 20rpx;
  width: 200rpx;
  height: 200rpx;
}

.ques3 .item image {
  width: 100%;
  height: 100%;
}

.ques3 .check-icon {
  display: none;
}

.ques3 .active .check-icon {
  display: block;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 10rpx;
  top: 10rpx;
}

.check-icon {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 10rpx;
  top: 10rpx;
}

.ques4 .item {
  position: relative;
  display: inline-block;
  margin: 20rpx;
  width: 300rpx;
  height: 300rpx;
}

.ans5 .item {
  box-shadow: 0 4rpx 28rpx 0 rgba(0, 0, 0, 0.09);
  width: 42%;
  margin: 15rpx 2%;
  display: inline-block;
  position: relative;
}

.ans5 .item image {
  width: 100%;
  border-radius: 26rpx;
}

.ans5 .item .check-icon {
  display: none;
}

.ans5 .item.active .check-icon {
  display: block;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 10rpx;
  top: 10rpx;
}

.audio-div {
  background: #fff;
  box-shadow: 0 4rpx 18rpx 0 rgba(0, 0, 0, 0.19);
  border-radius: 100px;
  font-size: 42rpx;
  color: #ff9f00;
  letter-spacing: 0;
  padding: 20rpx 0;
  margin: 20rpx 0;
  display: inline-block;
  width: 100%;
}

.audio-icon {
  vertical-align: sub;
  width: 60rpx;
  height: 60rpx;
}
