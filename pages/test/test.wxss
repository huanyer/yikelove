/* pages/test/test.wxss */

.main-page {
  background-color: #f2f2f2;
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  overflow: scroll;
}

.ques-title {
  padding: 20rpx 44rpx;
  font-size: 40rpx;
  color: #000;
}

.ques-ans {
  padding: 0 44rpx;
}

.ques-option {
  margin: 20rpx 0;
  background: #fff;
  box-shadow: 0 4rpx 28px 0 rgba(0, 0, 0, 0.09);
  border-radius: 26rpx;
  padding: 60rpx 0 60rpx 54rpx;
  font-family: STYuanti-TC-Bold;
  font-size: 40rpx;
  color: #ff9f00;
}

.option-icon {
  display: inline-block;
  margin-right: 30rpx;
  color: #b4b4b4;
}

.ques-option.active {
  background-image: linear-gradient(-120deg, #fc775d 0%, #ff9f00 100%);
  color: #fff;
}

.ques-option.active .option-icon {
  color: #fff;
}

